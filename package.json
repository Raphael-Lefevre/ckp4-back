{
  "name": "simple-api-starter",
  "version": "1.0.0",
  "description": " A basic starter for an express.js API",
  "main": "index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "lint": "eslint --fix src",
    "test": "mocha --exit",
    "migrate:dev": "npx prisma migrate dev --preview-feature",
    "generate": "npx prisma generate"
  },
  "keywords": [],
  "author": "RSP <rizkysampratama@gmail.com> (https://rizkysam.web.id)",
  "repository": {
    "type": "git",
    "url": "https://github.com/rizama/simple-api-starter"
  },
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^2.15.0",
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.2.0",
    "joi": "^17.3.0",
    "morgan": "^1.10.0",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "@prisma/cli": "^2.15.0",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "prettier": "2.2.1",
    "pretty-quick": "^3.1.0",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "prisma migrate dev --preview-feature"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "./node_modules/.bin/eslint --max-warnings=0",
      "pretty-quick --staged"
    ]
  }
}
